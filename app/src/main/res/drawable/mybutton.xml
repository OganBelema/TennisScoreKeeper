<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#fbc02d" />
            <gradient android:angle="-90" android:startColor="#f57f17" android:endColor="#fff176"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffeb3b" />
            <solid android:color="#ffeb3b"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffeb3b" />
            <gradient android:angle="-90" android:startColor="#fff176" android:endColor="#ffeb3b" />
        </shape>
    </item>
</selector>